<Window x:Class="Note_App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="MainWindow" Height="620" Width="820" WindowStartupLocation="CenterScreen" ResizeMode="NoResize" Background="LightBlue">
    <Grid Height="600" Width="800">
        <TextBox x:Name="noteContent" Height="434" Margin="0,38,0,0" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="24" AcceptsReturn="True"/>
        <Button x:Name="saveButton" Content="SPEICHERN" HorizontalAlignment="Left" Height="84" Margin="10,490,0,0" VerticalAlignment="Top" Width="250" FontSize="36" Click="SaveClick"/>
        <Button x:Name="saveButton_Copy" Content="ANSCHAUEN" HorizontalAlignment="Center" Height="84" Margin="0,490,0,0" VerticalAlignment="Top" Width="250" FontSize="36" Click="WatchClick"/>
        <Button x:Name="saveButton_Copy1" Content="LÖSCHEN" HorizontalAlignment="Left" Height="84" Margin="540,490,0,0" VerticalAlignment="Top" Width="250" FontSize="36" Click="DeleteClick"/>
    </Grid>
</Window>
